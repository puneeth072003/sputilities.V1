# Sputilities Frontend Environment Variables
# Copy this file to .env for local development
# For production, set these in your hosting platform's environment variables

# API Configuration
# Development: http://localhost:3601/api/v1
# Production: https://your-api-domain.com/api/v1
VITE_API_URL=http://localhost:3601/api/v1

# Performance Monitoring
# Enable performance monitoring in development (true/false)
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Application Environment
# Options: development, staging, production
VITE_APP_ENV=development

# Feature Flags (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# Sentry Error Tracking (optional - for production)
# VITE_SENTRY_DSN=your-sentry-dsn-here
# VITE_SENTRY_ENVIRONMENT=production

# Google Analytics (optional)
# VITE_GA_TRACKING_ID=your-ga-tracking-id

# Application Metadata
VITE_APP_NAME=Sputilities
VITE_APP_VERSION=1.0.0

